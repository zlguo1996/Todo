{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "AddItem": {
            "additionalProperties": false,
            "properties": {
                "state": {
                    "$ref": "#/definitions/TodoItemState"
                },
                "text": {
                    "maxLength": 100,
                    "minLength": 0,
                    "type": "string"
                }
            },
            "type": "object"
        },
        "ModifyItem": {
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "number"
                },
                "order": {
                    "type": "number"
                },
                "state": {
                    "$ref": "#/definitions/TodoItemState"
                },
                "text": {
                    "maxLength": 100,
                    "minLength": 0,
                    "type": "string"
                }
            },
            "type": "object"
        },
        "TodoItemState": {
            "enum": [
                "Completed",
                "Incomplete"
            ],
            "type": "string"
        }
    }
}
